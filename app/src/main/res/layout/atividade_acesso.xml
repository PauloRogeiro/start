<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme"
    android:background="@color/primaryTextColor"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <RelativeLayout
      android:layout_width="300dp"
      android:layout_height="350dp"
      android:layout_centerVertical="true"
      android:layout_centerHorizontal="true"
     >

      <de.hdodenhof.circleimageview.CircleImageView
          android:id="@+id/appCompatImageView"
          android:layout_width="118dp"
          android:layout_height="160dp"
          android:padding="2dp"
          android:layout_marginTop="2dp"
          android:layout_centerInParent="true"
          android:layout_alignParentTop="true"
          android:scaleType="centerCrop"
          app:civ_border_width="1dp"
          app:civ_border_color="@color/primaryTextColor"
          android:src="@drawable/new_user"

          />



      <Button
          android:id="@+id/acesso_facebook"
          style="@style/com_facebook_loginview_silver_style"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/appCompatImageView"
          android:layout_marginTop="2dp"
          android:text="Acesso com Facebook"
          android:drawableLeft="@drawable/facebook"
          android:layout_centerHorizontal="true" />

      <Button
          android:id="@+id/acesso_google"
          style="@style/com_facebook_loginview_silver_style"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Acesso com Gmail"
          android:layout_below="@+id/acesso_facebook"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="5dp"
          android:drawableLeft="@drawable/gmail"

          />



  </RelativeLayout>
    <android.support.design.widget.FloatingActionButton android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_plus_grey600_24dp"
        />


</RelativeLayout>

