<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondaryDarkColor"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/agendamento_pessoa_foto"
            android:layout_width="118dp"
            android:layout_height="80dp"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/secondaryDarkColor"
            app:srcCompat="@android:drawable/sym_def_app_icon"



            />

        <TextView
            android:id="@+id/agendamento_pessoa_nome"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Android Studio"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/agendamento_pessoa_foto"

            />

        <TextView
            android:id="@+id/agendamento_pessoa_data"
            android:layout_width="match_parent"
            android:layout_below="@+id/agendamento_pessoa_nome"
            android:padding="2dp"
            android:text="Sobrenome"
            android:layout_toRightOf="@id/agendamento_pessoa_foto"
            android:layout_height="wrap_content"



            />

        <TextView
            android:id="@+id/agendamento_pessoa_funcao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="paulo.ros.oliveira@gmail.com"
            android:padding="2dp"
            android:layout_below="@id/agendamento_pessoa_data"
            android:layout_toRightOf="@id/agendamento_pessoa_foto"


            />



    </RelativeLayout>

</android.support.v7.widget.CardView>







